@model ProductsManagementSystem.Models.VM.Account.RegisterViewModel

<h1 class="text-center mt-3 mb-3">Create User</h1>

<div asp-validation-summary="All" class="w-50 m-auto my-2 text-danger"></div>

<form asp-action="CreateUser" method="post" class="w-50 mx-auto p-4 border rounded shadow mt-2">
    <div class="form-group mb-3">
        <label class="form-label mb-1">First name</label>
        <input type="text" class="form-control" asp-for="FirstName" />
        <span class="text-danger" asp-validation-for="FirstName"></span>
    </div>
    <div class="form-group mb-3">
        <label class="form-label mb-1">Last name</label>
        <input type="text" class="form-control" asp-for="LastName" />
        <span class="text-danger" asp-validation-for="LastName"></span>
    </div>
    <div class="form-group mb-3">
        <label class="form-label mb-1">Email</label>
        <input type="email" class="form-control" asp-for="Email" />
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>
    <input type="password" class="d-none" asp-for="Password" value="Paroli1!" />
    <input type="password" class="d-none" asp-for="ConfirmPassword" value="Paroli1!" />
    <div class="form-group mb-3">
        <select asp-for="SelectedRole" asp-items="Model.RoleList" class="form-select">
            <option disabled selected>--Select Role--</option>
        </select>
    </div>


    <div class="d-flex justify-content-between mt-3">
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        <button type="submit" class="btn btn-primary">Create User</button>
    </div>
</form>
@model List<ProductsManagementSystem.Models.Entities.User>

<div class="mt-3">
    <h1 class="text-center">Hello Admin</h1>
    <a class="btn btn-outline-info" asp-action="CreateUser">Create User</a>

    <table class="table table-bordered mt-5">
        <thead>
            <tr>
                <th>Firstname and Lastname</th>
                <th>Username</th>
                <th>User Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.FirstName @user.LastName</td>
                    <td>@user.UserName</td>
                    <td>@user.Id</td>
                    <td>
                        <div class="d-flex gap-3">
                            <a class="btn btn-outline-dark" asp-action="EditUser" asp-route-Id="@user.Id">Edit User</a>
                            <form method="post" asp-action="ResetPassword" asp-route-Id="@user.Id">
                                <button type="submit" class="btn btn-outline-danger">Reset Password</button>
                            </form>
                            <form method="post" asp-action="DeleteUser" asp-route-Id="@user.Id">
                                <button type="submit" class="btn btn-danger">Delete User</button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
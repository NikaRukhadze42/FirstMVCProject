@model ProductsManagementSystem.Models.VM.User.UserDeleteViewModel

<div class="mt-4 w-50 m-auto">
    <h1 class="text-center">Are you sure that you want to delete this account?</h1>
    <form method="post" asp-action="DeleteUser">
        <div class="form-group mb-4">
            <label class="form-label" asp-for="@Model.Password">Password</label>
            <input class="form-control" type="password" asp-for="@Model.Password"/>
            <span class="text-danger mt-2" asp-validation-for="@Model.Password"></span>
        </div>
        <div class="form-group mb-4">
            <label class="form-label" asp-for="@Model.ConfirmPassword">Confirm Password</label>
            <input class="form-control" type="password" asp-for="@Model.ConfirmPassword" />
            <span class="text-danger mt-2" asp-validation-for="@Model.ConfirmPassword"></span>
        </div>

        <div class="d-flex justify-content-between">
            <a class="btn btn-outline-dark" asp-action="Index">Cancel</a>
            <button type="submit" class="btn btn-danger">Delete Account</button>
        </div>
    </form>
</div>
@model ProductsManagementSystem.Models.VM.User.UserInfoUpdateViewModel



<div class="mt-5 w-50 m-auto">
    <h1>Update your personal information</h1>

    <form method="post" asp-action="UpdatePersonalInfo">
        <div class="form-group mt-3">
            <label class="form-label" asp-for="@Model.FirstName">First Name</label>
            <input type="text" class="form-control" asp-for="@Model.FirstName"/>
            <span asp-validation-for="@Model.FirstName"></span>
        </div>

        <div class="form-group mt-3">
            <label class="form-label" asp-for="@Model.LastName">Last Name</label>
            <input type="text" class="form-control" asp-for="@Model.LastName"/>
            <span asp-validation-for="@Model.LastName"></span>
        </div>

        <div class="form-group mt-3">
            <label class="form-label" asp-for="@Model.PhoneNumber">Phone Number</label>
            <input type="text" class="form-control" asp-for="@Model.PhoneNumber" />
        </div>


        <div class="d-flex justify-content-between mt-5">
            <a class="btn btn-outline-dark" asp-action="Index">Cancel</a>
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
</div>
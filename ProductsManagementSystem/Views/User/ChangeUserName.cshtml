@model ProductsManagementSystem.Models.VM.User.UserUserNameChangeViewModel



<div class="mt-5 w-50 m-auto">
    <h1 class="m-auto">Change Your Username</h1>

    <form method="post" asp-action="ChangeUserName">
        <div class="form-group mt-3">
            <label class="form-label" asp-for="@Model.NewUserName">New Username</label>
            <input type="email" class="form-control" asp-for="@Model.NewUserName" />
            <span class="text-danger mt-2" asp-validation-for="@Model.NewUserName"></span>
        </div>

        <div class="form-group mt-3">
            <label class="form-label" asp-for="@Model.Password">Password</label>
            <input type="password" class="form-control" asp-for="@Model.Password" />
            <span class="text-danger mt-2" asp-validation-for="@Model.Password"></span>
        </div>

        <div class="form-group mt-3">
            <label class="form-label" asp-for="@Model.ConfirmPassword">Confirm New Password</label>
            <input type="password" class="form-control" asp-for="@Model.ConfirmPassword" />
            <span class="text-danger mt-2" asp-validation-for="@Model.ConfirmPassword"></span>
        </div>


        <div class="d-flex justify-content-between mt-5">
            <a class="btn btn-outline-dark" asp-action="Index">Cancel</a>
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
</div>
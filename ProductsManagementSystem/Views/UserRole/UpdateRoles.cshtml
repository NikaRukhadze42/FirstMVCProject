@model ProductsManagementSystem.Models.VM.UserRole.UserRoleUpdateViewModel

<div class="w-50 m-auto">
    <h1 class="text-center">Change Roles of User: @ViewBag.user.FirstName</h1>

    <form asp-action="UpdateRoles" method="post" class="mt-5">
        <input asp-for="@Model.UserId" type="text" value="@ViewBag.user.Id" readonly class="d-none" />
        <div class="form-group">
            <label asp-for="@Model.RoleList">Select Roles</label>
            <select asp-for="@Model.RoleList" class="form-control" multiple>
                @foreach (var role in ViewBag.roles)
                {
                    <option value="@role">@role</option>
                }
            </select>
        </div>


        <div class="d-flex justify-content-between mt-5">
            <a class="btn btn-outline-dark" asp-action="Index">Cancel</a>
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
</div>
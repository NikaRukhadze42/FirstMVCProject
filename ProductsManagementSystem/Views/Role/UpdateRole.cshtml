@model ProductsManagementSystem.Models.VM.Role.UpdateRoleViewModel

<div class="w-50 m-auto">
    <h1 class="text-center">Edit Role: @ViewBag.role.Name</h1>

    <form asp-action="UpdateRole" method="post">
        <div class="form-group mt-3">
            <label class="form-label">Name:</label>
            <input type="text" class="form-control" value="@ViewBag.role.Name" asp-for="@Model.Name" required />
        </div>

        <input asp-for="@Model.Id" class="d-none"/>

        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Index" class="btn btn-outline-dark">Cancel</a>
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
</div>
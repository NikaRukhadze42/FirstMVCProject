<div class="w-50 m-auto mt-3">
    <h1 class="text-center">Add role</h1>

    <form method="post" asp-action="Add">
        <div class="form-group">
            <label class="form-label">Enter Role</label>
            <input class="form-control" type="text" name="roleName" required />
        </div>

        <div class="d-flex mt-3 justify-content-between">
            <a class="btn btn-outline-dark" asp-action="Index">Cancel</a>
            <button class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>
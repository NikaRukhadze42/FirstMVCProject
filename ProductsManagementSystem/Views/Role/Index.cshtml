
<h1>Roles List</h1>

<a class="btn btn-success" asp-action="Add">Add Role</a>

<table class="table table-bordered my-4">
    <thead>
        <th>Role Id</th>
        <th>Role Name</th>
        <th>Actions</th>
    </thead>
    <tbody>
        @foreach (var role in ViewBag.Roles)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td>
                    <div class="d-flex gap-3">
                        <a class="btn btn-outline-warning" asp-action="UpdateRole" asp-route-Id="@role.Id">Update</a>
                        <form method="post" asp-action="Remove" asp-route-Id="@role.Id">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-primary" asp-action="Index" asp-controller="Home">Go to home</a>
@model ProductsManagementSystem.Models.Entities.Order

<h1>Order: @Model.Id Details</h1>

<h3 class="mt-3 mb-3">Products:</h3>
<ul>
    @foreach (var product in Model.Products)
    {
        <li class="mb-2">@product.Name - $@product.Price</li>
    }
</ul>

<a asp-action="Index" class="btn btn-primary">Go Back</a>